{   
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true,
        "commonjs": true
    },
    "extends": ["eslint:recommended","plugin:react/recommended"],
    "parser": "babel-eslint",
    "settings": {
        "react": {
            "version": "detect"
        }
     },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}